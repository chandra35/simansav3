/**
 * Custom Compact Styles for SIMANSA v3
 * Makes the entire application more compact and space-efficient
 */

/* ===============================================
   GLOBAL COMPACT STYLES
   =============================================== */

/* Body and General Text */
body.text-sm {
    font-size: 0.875rem !important;
}

/* Smaller headings */
.content-header h1 {
    font-size: 1.5rem !important;
}

h2, .h2 { font-size: 1.3rem !important; }
h3, .h3 { font-size: 1.15rem !important; }
h4, .h4 { font-size: 1rem !important; }
h5, .h5 { font-size: 0.925rem !important; }
h6, .h6 { font-size: 0.875rem !important; }

/* ===============================================
   CARD COMPONENTS
   =============================================== */

/* Card Headers */
.card-header {
    padding: 0.5rem 0.75rem !important;
}

.card-title {
    font-size: 1rem !important;
    margin-bottom: 0 !important;
}

.card-title i {
    font-size: 0.875rem !important;
}

/* Card Body */
.card-body {
    padding: 0.75rem !important;
}

/* Card Footer */
.card-footer {
    padding: 0.5rem 0.75rem !important;
}

/* Card Tools */
.card-tools .btn {
    padding: 0.25rem 0.5rem !important;
    font-size: 0.8125rem !important;
}

/* ===============================================
   BUTTONS
   =============================================== */

/* All Buttons */
.btn {
    padding: 0.375rem 0.75rem !important;
    font-size: 0.875rem !important;
}

.btn-sm {
    padding: 0.25rem 0.5rem !important;
    font-size: 0.8125rem !important;
}

.btn-lg {
    padding: 0.5rem 1rem !important;
    font-size: 1rem !important;
}

.btn-xs {
    padding: 0.125rem 0.25rem !important;
    font-size: 0.75rem !important;
}

/* Button Icons */
.btn i {
    font-size: 0.875rem !important;
}

.btn-sm i {
    font-size: 0.75rem !important;
}

/* ===============================================
   FORMS
   =============================================== */

/* Form Controls */
.form-control,
.form-select,
select.form-control {
    padding: 0.375rem 0.75rem !important;
    font-size: 0.875rem !important;
    height: calc(1.5em + 0.75rem + 2px) !important;
}

.form-control-sm {
    padding: 0.25rem 0.5rem !important;
    font-size: 0.8125rem !important;
    height: calc(1.5em + 0.5rem + 2px) !important;
}

/* Form Labels */
.form-label,
label {
    font-size: 0.875rem !important;
    margin-bottom: 0.25rem !important;
}

/* Form Groups */
.form-group {
    margin-bottom: 0.75rem !important;
}

/* Input Groups */
.input-group-text {
    padding: 0.375rem 0.75rem !important;
    font-size: 0.875rem !important;
}

/* ===============================================
   TABLES
   =============================================== */

/* DataTables */
.table {
    font-size: 0.875rem !important;
}

.table thead th {
    padding: 0.5rem !important;
    font-size: 0.875rem !important;
    font-weight: 600 !important;
}

.table tbody td {
    padding: 0.5rem !important;
    font-size: 0.875rem !important;
}

.table-sm thead th,
.table-sm tbody td {
    padding: 0.3rem !important;
}

/* DataTables specific */
.dataTables_wrapper .dataTables_length,
.dataTables_wrapper .dataTables_filter,
.dataTables_wrapper .dataTables_info,
.dataTables_wrapper .dataTables_paginate {
    font-size: 0.875rem !important;
}

.dataTables_wrapper .dataTables_length select,
.dataTables_wrapper .dataTables_filter input {
    padding: 0.25rem 0.5rem !important;
    font-size: 0.875rem !important;
}

/* Pagination */
.pagination {
    font-size: 0.875rem !important;
}

.page-link {
    padding: 0.375rem 0.75rem !important;
    font-size: 0.875rem !important;
}

/* ===============================================
   BADGES & LABELS
   =============================================== */

.badge {
    padding: 0.25em 0.5em !important;
    font-size: 0.75rem !important;
}

/* ===============================================
   ALERTS
   =============================================== */

.alert {
    padding: 0.5rem 0.75rem !important;
    font-size: 0.875rem !important;
}

.alert i {
    font-size: 1rem !important;
}

/* ===============================================
   BREADCRUMB
   =============================================== */

.breadcrumb {
    font-size: 0.8125rem !important;
    padding: 0.5rem 0.75rem !important;
}

.breadcrumb-item {
    font-size: 0.8125rem !important;
}

/* ===============================================
   MODALS
   =============================================== */

.modal-header {
    padding: 0.75rem 1rem !important;
}

.modal-title {
    font-size: 1.1rem !important;
}

.modal-body {
    padding: 0.75rem 1rem !important;
}

.modal-footer {
    padding: 0.5rem 1rem !important;
}

/* ===============================================
   SIDEBAR
   =============================================== */

/* Sidebar Navigation */
.nav-sidebar .nav-link {
    padding: 0.4rem 0.5rem 0.4rem 1rem !important;
    font-size: 0.875rem !important;
}

.nav-sidebar .nav-link i {
    font-size: 0.875rem !important;
}

.nav-sidebar .nav-treeview .nav-link {
    padding: 0.35rem 0.5rem 0.35rem 2rem !important;
}

.nav-sidebar .nav-header {
    font-size: 0.75rem !important;
    padding: 0.4rem 1rem !important;
}

/* Sidebar Brand */
.brand-link {
    padding: 0.75rem 0.5rem !important;
    font-size: 1rem !important;
}

.brand-image {
    max-height: 30px !important;
}

.brand-text {
    font-size: 1rem !important;
}

/* ===============================================
   NAVBAR
   =============================================== */

.navbar-nav .nav-link {
    padding: 0.5rem 1rem !important;
    font-size: 0.875rem !important;
}

.navbar-nav .nav-link i {
    font-size: 1rem !important;
}

/* User Menu */
.user-panel {
    padding: 0.5rem !important;
}

.user-panel .info {
    font-size: 0.875rem !important;
}

/* ===============================================
   SMALL BOX (Widgets)
   =============================================== */

.small-box .inner h3 {
    font-size: 2rem !important;
}

.small-box .inner p {
    font-size: 0.875rem !important;
}

.small-box .icon i {
    font-size: 70px !important;
}

/* ===============================================
   INFO BOX
   =============================================== */

.info-box {
    min-height: 70px !important;
}

.info-box-icon {
    width: 70px !important;
}

.info-box-icon i {
    font-size: 1.875rem !important;
}

.info-box-content {
    padding: 5px 10px !important;
}

.info-box-text {
    font-size: 0.875rem !important;
}

.info-box-number {
    font-size: 1.25rem !important;
}

/* ===============================================
   TIMELINE
   =============================================== */

.timeline > div > .timeline-item {
    font-size: 0.875rem !important;
}

.timeline > div > .timeline-item > .timeline-header {
    font-size: 0.875rem !important;
    padding: 0.5rem !important;
}

.timeline > div > .timeline-item > .timeline-body {
    padding: 0.5rem !important;
    font-size: 0.875rem !important;
}

/* ===============================================
   CUSTOM ADJUSTMENTS
   =============================================== */

/* Reduce spacing between sections */
.content-header {
    padding: 10px 0.5rem !important;
}

.content {
    padding: 0.5rem !important;
}

/* Compact rows */
.row {
    margin-right: -0.5rem;
    margin-left: -0.5rem;
}

.col,
[class*="col-"] {
    padding-right: 0.5rem;
    padding-left: 0.5rem;
}

/* Reduce card margins */
.card {
    margin-bottom: 0.75rem !important;
}

/* ===============================================
   SELECT2 (if used)
   =============================================== */

.select2-container--default .select2-selection--single {
    height: calc(1.5em + 0.75rem + 2px) !important;
}

.select2-container--default .select2-selection--single .select2-selection__rendered {
    line-height: calc(1.5em + 0.75rem + 2px) !important;
    font-size: 0.875rem !important;
}

.select2-container--default .select2-selection--single .select2-selection__arrow {
    height: calc(1.5em + 0.75rem + 2px) !important;
}

/* ===============================================
   SWEETALERT2 (if used)
   =============================================== */

.swal2-popup {
    font-size: 0.875rem !important;
}

.swal2-title {
    font-size: 1.3rem !important;
}

.swal2-html-container {
    font-size: 0.875rem !important;
}

/* ===============================================
   RESPONSIVE ADJUSTMENTS
   =============================================== */

@media (max-width: 768px) {
    .content-header h1 {
        font-size: 1.3rem !important;
    }
    
    .card-body {
        padding: 0.5rem !important;
    }
    
    .btn {
        padding: 0.25rem 0.5rem !important;
        font-size: 0.8125rem !important;
    }
}

/* ===============================================
   PRINT ADJUSTMENTS
   =============================================== */

@media print {
    body.text-sm {
        font-size: 10pt !important;
    }
    
    .table {
        font-size: 9pt !important;
    }
}
